extends user/base_users

block users_media
    style.
        #users-table td:nth-child(2), #users-table th:nth-child(2) {
            border-right: none;
            text-align: left;
        }

block users_js_media
    script(type='text/javascript').
        $(function () {
            $('form.kick-form').find('a.button').click(function () {
                $(this).parent().submit();
                return false;
            })
        });

block users_table
    include organization/users_table
