extends base

block body
    form(action='', method='post')
        - csrf_token
        # {formset.management_form}
        table
            tr
                th User
                th Time
                th State
                th Reason
                if formset.can_delete
                    th Delete?
            each form in formset
                tr
                - with user=form.instance.user
                    td(class=user.display_rank)
                        a(href='{% url "user_page" user.user.username %}')= user.long_display_name
                td #{form.instance.time|date:"N j, o, h:i"}
                td #{form.state}
                td #{form.reason}
                if formset.can_delete
                    td #{form.DELETE}
