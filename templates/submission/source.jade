extends submission/info_base

- load static from staticfiles
- load strings

block media
    link(rel='stylesheet', href='{% static "pygment-github.css" %}', type='text/css')
    style.
        .submission-info {
            text-align: right;
            float: right;
        }
    
        .submission-info .submission-date {
            color: gray;
        }

        .source-ln, .source-ln a {
            color: gray;
            border-right: 1px solid gray;
            padding-right: 5px;
            text-align: right;
        }
        
        .source-ln a:hover {
            text-decoration: underline;
        }

        pre {
            margin: 0;
            padding: 0;
        }

        .source-code {
            padding-left: 15px;
        }

        .source-wrap {
            overflow-x: auto;
        }

block body
    br
    a(href='{% url "submission_status" submission.id %}') View status
    br
    if request.user == submission.user.user or perms.judge.resubmit_other
        a(href='{% url "judge.views.problem_submit" submission.problem.code submission.id %}') Resubmit
        br
    hr(style='float:left;width:30%')
    br
    .source-wrap
        table
            tr
                td.source-ln
                    div
                        for line in raw_source|split
                            a(href='#line-{{ forloop.counter }}', name='line-{{ forloop.counter }}')
                                pre #{forloop.counter}
                td.source-code #{highlighted_source}
    .submission-info
        
