extends base
- load staticfiles
- load timedelta
- load tz
- load i18n

block meta
    meta(name='description', content="The {{ SITE_NAME }}'s contest list - past, present, and future.")

block js_media
    script(src='{% static "featherlight.min.js" %}', type='text/javascript')
    script(type='text/javascript').
        $(document).ready(function () {
            $('.time-remaining').each(function () {
                count_down($(this));
            });

            $('.contest-tag').find('a').featherlight();
        });

block media
    link(href='{% static "featherlight.min.css" %}', type='text/css', rel='stylesheet', media='all')

block header
    div(style='float: right; margin-top: 0.9em; font-size: 1.3em;')
        a(href='{% url "contest_calendar" now.year now.month %}') {% trans "Calendar view" %}

block body
    if current_contests
        br
        h3 {% trans "Ongoing Contests" %}
        br
        table.contest-list.table.striped
            thead: tr
                th(style='width:90%') {% trans "Contest" %}
                th {% trans "#" %}
                if not IN_CONTEST
                    th(style='width:15%')
            tbody: each contest in current_contests
                tr
                    td: div(style='position:relative')
                        .contest-tags: each tag in contest.tags.all
                            span.contest-tag(style='background-color: {{ tag.color }}')
                                a(href='{% url "contest_tag" tag.name %}', style='color: {{ tag.text_color }}',
                                data-featherlight='{% url "contest_tag_ajax" tag.name %}')= tag.name
                        a.contest-list-title(href='{% url "contest_view" contest.key %}')= contest.name
                        if contest.start_time
                            br
                            if contest.time_before_end
                                span.time {% trans "Ending in" %}&nbsp;
                                span.time.time-remaining(data-secs='{{ contest.time_before_end|seconds }}')
                                    | #{contest.time_before_end|timedelta:"localized"}
                            elif contest.free_start and contest.start_time
                                span.time {% trans "Started at" %} #{contest.start_time|date:_("N j, Y, G:i")}
                            .time.floating-time(style='text-align:right')
                                span(style='text-align:right;color:#777;')
                                if contest.time_limit
                                    | #{contest.start_time|date:_("M j, Y, G:i")} - #{contest.end_time|date:_("M j, Y, G:i")}
                                else
                                    | #{contest.start_time|date:_("M j, Y, G:i")}
                                br
                                if contest.time_limit
                                    - blocktrans with time_limit=contest.time_limit|timedelta:"localized-no-seconds"
                                        | {{ time_limit }} window
                                else
                                    - blocktrans with window_length=contest.contest_window_length|timedelta:"localized-no-seconds"
                                        | {{ window_length }} long
                    td: a(href='{% url "contest_ranking" contest.key %}') x#{contest.participation_count}
                    if not IN_CONTEST
                        td: a.unselectable.button.full.participate-button(href='{% url "contest_join" contest.key %}')
                            if request.user.profile in contest.organizers.all
                                | {% trans "Spectate" %}
                            else
                                | {% trans "Join" %}
        br
        .dashed
        
    br
    h3 {% trans "Upcoming Contests" %}
    br
    if future_contests
        table.contest-list.table.striped
            thead: tr: th {% trans "Contest" %}
            tbody: each contest in future_contests
                tr: td: div(style='position:relative')
                    .contest-tags: each tag in contest.tags.all
                        span.contest-tag(style='background-color: {{ tag.color }}')
                            a(href='{% url "contest_tag" tag.name %}', style='color: {{ tag.text_color }}',
                            data-featherlight='{% url "contest_tag_ajax" tag.name %}')= tag.name
                    a.contest-list-title(href='{% url "contest_view" contest.key %}')= contest.name
                    if contest.start_time
                        br
                        if contest.time_before_start
                            span.time {% trans "Starting in" %}&nbsp;
                            span.time.time-remaining(data-secs='{{ contest.time_before_start|seconds }}')
                                | #{contest.time_before_start|timedelta:"localized"}

                        .time.floating-time(style='text-align:right')
                            span(style='text-align:right;color:#777;')
                            if contest.time_limit
                                | #{contest.start_time|date:_("M j, Y, G:i")} - #{contest.end_time|date:_("M j, Y, G:i")}
                            else
                                | #{contest.start_time|date:_("M j, Y, G:i")}
                            br
                            if contest.time_limit
                                - blocktrans with time_limit=contest.time_limit|timedelta:"localized-no-seconds"
                                    | {{ time_limit }} window
                            else
                                - blocktrans with window_length=contest.contest_window_length|timedelta:"localized-no-seconds"
                                    | {{ window_length }} long
    else
        i {% trans "There are no scheduled contests at this time." %}



    br
    hr.dashed
    br
    h3 {% trans "Past Contests" %}
    br
    table.contest-list.table.striped
        thead: tr
            th(style='width:90%') {% trans "Contest" %}
            th {% trans "#" %}
            if not IN_CONTEST
                th(style='width:15%')
        tbody: each contest in past_contests
            tr
                td: div(style='position:relative')
                    a.contest-list-title(href='{% url "contest_view" contest.key %}')= contest.name
                    .contest-tags: each tag in contest.tags.all
                        span.contest-tag(style='background-color: {{ tag.color }}')
                            a(href='{% url "contest_tag" tag.name %}', style='color: {{ tag.text_color }}',
                              data-featherlight='{% url "contest_tag_ajax" tag.name %}')= tag.name
                    span.floating-time-right(style='text-align:right;color:#777;')
                        if contest.time_limit
                            | #{contest.start_time|date:_("M j, Y, G:i")} - #{contest.end_time|date:_("M j, Y, G:i")}
                        else
                            | #{contest.start_time|date:_("M j, Y, G:i")}
                        br
                        if contest.time_limit
                            - blocktrans with time_limit=contest.time_limit|timedelta:"localized-no-seconds"
                                | {{ time_limit }} window
                        else
                            - blocktrans with window_length=contest.contest_window_length|timedelta:"localized-no-seconds"
                                | {{ window_length }} long
                td: a(href='{% url "contest_ranking" contest.key %}') #{contest.participation_count}
                if not IN_CONTEST
                    td: a.unselectable.button.full.participate-button(href='#')
                            | {% trans "Virtual join" %}
