extends user/base_users
- load staticfiles

block users_media
    style.
        #users-table td {
            height: 2.5em;
        }

        #users-table a {
            display: block;
        }

        .userinfo a {
            display: inline !important;
        }

        #users-table th a, #users-table th a:link, #users-table th a:visited {
            color: white;
        }

        #users-table th a:hover {
            color: #0F0;
        }

        #users-table td a:hover {
            text-decoration: underline;
        }

        .rank {
            min-width: 2.5em
        }

        .points {
            min-width: 4em;
        }

        .full-score, .full-score a {
            font-weight: bold;
            color: green;
        }

        .partial-score, .partial-score a {
            color: green;
        }

        .failed-score, .failed-score a {
            font-weight: bold;
            color: red;
        }

        .user-points {
            font-weight: bold;
            color: black;
        }

        .solving-time {
            color: gray;
            font-weight: normal;
            font-size: 0.75em;
            padding-bottom: -0.75em;
        }

        .point-denominator {
            border-top: 1px solid gray;
            font-size: 0.7em;
        }

        .start-time {
            display: none;
        }

        .user-name {
            position: relative;
        }

    if has_rating
        style.
            #users-table .rate-box {
                font-size: 0.85em;
                float: left;
            }

            #users-table .rating {
                margin-left: 1.25em;
                display: block;
            }

            #users-table td:nth-child(2) a {
                display: block;
            }

block users_js_media
    if last_msg
        script(type='text/javascript', src='{% static "event.js" %}')
        script(type='text/javascript').
            $(function () {
                function install_tooltips() {
                    register_update_relative(function () {
                        return $('.start-time.active');
                    }, function (when) {
                        return Math.abs(moment().diff(when, 'years')) < 1;
                    });

                    $('a.user-name').each(function () {
                        var link = $(this);
                        link.mouseenter(function (e) {
                            var start_time = link.find('.start-time').text();
                            link.addClass('tooltipped tooltipped-e').attr('aria-label', start_time);
                        }).mouseleave(function (e) {
                            link.removeClass('tooltipped tooltipped-e').removeAttr('aria-label');
                        });
                    });
                }

                var receiver = new EventReceiver(
                        "{{ EVENT_DAEMON_LOCATION }}", "{{ EVENT_DAEMON_POLL_LOCATION }}",
                        ['contest_#{contest.id}'], #{last_msg}, function (message) {
                            var table = $('#users-table');
                            switch (message.type) {
                                case 'update':
                                    $.ajax({
                                        url: '{% url "contest_ranking_ajax" contest.key %}'
                                    }).done(function (data) {
                                        table.html(data);
                                        install_tooltips();
                                    }).fail(function () {
                                        console.log('Failed to update table!');
                                    });
                            }
                        }
                );
                install_tooltips();
            });

block users_table
    include contest/ranking_table