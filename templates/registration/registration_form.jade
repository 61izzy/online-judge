extends base
- load i18n

block media
    include timezone/media
    | #{form.media.css}
    style.
        .sortedm2m-container, .sortedm2m-container p.selector-filter {
            width: 300px;
        }

        .sortedm2m-container p.selector-filter input {
            width: 262px;
        }

        ul.sortedm2m {
            width: 284px;
            min-height: 100px;
            max-height: 200px;
        }

        .sortedm2m-container, .sortedm2m-container p.selector-filter {
            width: 300px;
        }

        .sortedm2m-container p.selector-filter input {
            width: 262px;
        }

        ul.sortedm2m {
            width: 284px;
            min-height: 70px;
            max-height: 200px;
            height: 70px
        }

        .grayed {
            color: #666;
        }

        .inline-header {
            float: left;
            font-size: 1.1em;
            padding: 4px 8px;
            padding-left: 0;
        }

        .block-header {
            color: #666;
            font-size: 1.1em;
        }

        .fullwidth {
            display: block;
            overflow: hidden;
        }

        #edit-form {
            border: unset;
            background: unset;
            max-width: 700px;
        }

        #center-float {
            position: relative;
            margin: 0em auto auto -28.5em;
            left: 50%;
            width: 700px;
        }

        .full-textfield { padding-top: 0.5em; }
block js_media
    include timezone/js_media
    | #{form.media.js}

block body
    #center-float: form.form-area#edit-form(action='', method='post')
        - csrf_token
        table(style='padding-right:0.8em')
            tr
                td: label.inline-header.grayed {% trans "Username" %}:
                td: span.fullwidth #{form.username}
            tr
                td: label.inline-header.grayed {% trans "Email" %}:
                td: span.fullwidth #{form.email}
            tr
                td: label.inline-header.grayed {% trans "Password" %}:
                td: span.fullwidth #{form.password1}
            tr
                td: label.inline-header.grayed {% trans "Password (again)" %}:
                td: span.fullwidth #{form.password2}
            tr
                td: label.inline-header.grayed {% trans "Location" %}:
                td: span.fullwidth
                        div #{form.timezone}
                        | {% trans "or" %}
                        = ' '
                        a#open-map(href='#', data-featherlight='.map-wrap') {% trans "pick from map" %}
            tr
                td: label.inline-header.grayed {% trans "Preferred language" %}:
                td: span.fullwidth #{form.language}
            //tr
                td: label.inline-header.grayed {% trans "Editor theme" %}:
                td: span.fullwidth #{form.ace_theme}
        div.block-header(style='padding-bottom:0.4em;padding-left:2px;margin-top:0.75em') {% trans "Affiliated organizations" %}:
        | #{form.organizations}
        if form.newsletter
            div #{form.newsletter}
                label.inline-header.grayed(for='id_newsletter', style='float: unset;') Notify me about upcoming contests
        hr
        button(style="float:right;", type='submit') {% trans "Register!" %}
        input(type='hidden', name='next', value=next)
    div.map-wrap
        div.map-inset
            div.map-axis-x
            div.map-axis-y
