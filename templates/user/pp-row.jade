- load static from staticfiles
- load tz
- load i18n

td.sub-result(class=breakdown.submission.result_class)
    .score
        | #{breakdown.submission.case_points|floatformat:"0"} / #{breakdown.submission.case_total|floatformat:"0"}
    .state
        span.status(title=breakdown.submission.long_status)= breakdown.submission.short_status
        = ' | '
        span.language #{breakdown.submission.language.short_display_name}

td(colspan=2).sub-info
    .name: a(href='{% url "problem_detail" breakdown.problem_code %}') #{breakdown.problem_name}
    div: span.time(data-unix='{{ breakdown.date|utc|date:"c" }}')
            - blocktrans with time=breakdown.submission.date|date:_("N j, Y, g:i a") asvar str_time
                | on {{ time }}
            span.relative= str_time

td.sub-usage
    .pp=breakdown.points
    .pp-weighted
        | weighted
        b #{breakdown.weight|floatformat:1}
        = '% ('
        | #{breakdown.scaled_points|floatformat:0}
        = ')'